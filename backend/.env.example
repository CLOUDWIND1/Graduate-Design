# App
APP_NAME=全民获客智能推荐系统
ENV=dev
DEBUG=true

# Security / JWT
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_STRING
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Database
DB_HOST=db
DB_PORT=3306
DB_NAME=reco_system
DB_USER=root
DB_PASSWORD=password
DATABASE_URL=mysql+pymysql://root:password@db:3306/reco_system?charset=utf8mb4

# Redis
REDIS_URL=redis://redis:6379/0

# Model
MODEL_DIR=/app/data/models
MODEL_TYPE=rf   # rf or xgb
RF_MODEL_PATH=/app/data/models/rf.pkl
XGB_MODEL_PATH=/app/data/models/xgb.json
SCALER_PATH=/app/data/models/scaler.pkl

# Recommendation
RECO_LIST_SIZE=10
REQUEST_TIMEOUT_SECONDS=2

# Logging
LOG_LEVEL=INFO
LOG_DIR=/app/logs